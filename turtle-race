import turtle
import time 

WIDTH, HEIGHT = 550, 550

def number_of_turtles():
    turtles = 0
    while True:
        turtles = input('Please enter the number of turtles (2 - 10): ')
        if turtles.isdigit():
            turtles = int(turtles)
        else: 
            print("Number of turtles is invalid. Plese try again!")
            continue
        
        if 2 <= turtles <= 10:
            return turtles
        else: 
            print('Number not in range 2-10. Please try again!')


def init_turtle():
    screen = turtle.Screen()
    screen.setup(WIDTH, HEIGHT)
    screen.title('Turtle Racing Game!')

turtles = number_of_turtles()
init_turtle()

turtle = turtle.Turtle()
turtle.speed(4)
turtle.penup()
turtle.shape('turtle')
turtle.color('pink')
turtle.foward(100)
turtle.left(90)
turtle.pendown()
turtle.forward(100)
turtle.right(90)
turtle.backward(100)

turtle2 = turtle.Turtle()
turtle2.speed(8)
turtle2.penup()
turtle2.shape('turtle')
turtle2.color('blue')
turtle2.foward(90)
turtle2.left(100)
turtle2.pendown()
turtle2.forward(80)
turtle2.right(65)
turtle2.backward(90)
